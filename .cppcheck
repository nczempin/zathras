<?xml version="1.0"?>
<project version="1">
    <builddir>build-cppcheck</builddir>
    <platform>unix64</platform>
    <analyze-all-vs-configs>true</analyze-all-vs-configs>
    <check-headers>true</check-headers>
    <check-unused-templates>true</check-unused-templates>
    <max-ctu-depth>3</max-ctu-depth>
    
    <includedir>
        <dir name="zathras_lib/src"/>
        <dir name="src"/>
    </includedir>
    
    <paths>
        <dir name="src"/>
        <dir name="zathras_lib/src"/>
    </paths>
    
    <exclude>
        <path name="build*/"/>
        <path name=".git/"/>
    </exclude>
    
    <libraries>
        <library>std</library>
    </libraries>
    
    <suppressions>
        <suppression>missingInclude</suppression>
        <suppression>unmatchedSuppression</suppression>
    </suppressions>
    
    <addons>
        <addon>cert</addon>
        <addon>threadsafety</addon>
    </addons>
</project>